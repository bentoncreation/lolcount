<h1 style="font-size:60px;"><%= @user.screen_name %></h1>

<p style="text-align:center;margin:20px 0 30px 0;">
	<img src="http://img.tweetimag.es/i/<%= @user.screen_name %>_b" style="width:73px;height:73px;border:6px solid #fff;" /><br />
	<a href="http://twitter.com/#!/<%= @user.screen_name %>">Twitter Profile</a>
</p>

<table>
	<tr>
		<th style="width:50%;vertical-align:top;padding-right:10px;">
			Received: <span style="font-family:'Lucida Grande', Helvetica, Arial;font-size:30px;line-height:100%;"><%= @user.received_lols.count %></span>
		</th>
		<th style="width:50%;vertical-align:top;padding-left:10px;">
			Given: <span style="font-family:'Lucida Grande', Helvetica, Arial;font-size:30px;line-height:100%;"><%= @user.given_lols.count %></span>
		</th>
	</tr>
	<tr>
		<td style="width:50%;vertical-align:top;padding-right:10px;">
			<% @user.received_lols.each do |lol| %>
				<p style="margin-bottom:30px;">
					<%= lol.tweet.text %><br />
					<small><img src="http://img.tweetimag.es/i/<%= lol.tweet.from_user %>_m" style="border:3px solid #fff;vertical-align:middle;" /> <%= link_to lol.tweet.from_user, user_path(lol.tweet.from_user) %></small>
				</p>
			<% end %>
		</td>
		<td style="width:50%;vertical-align:top;padding-left:10px;">
			<% @user.given_lols.each do |lol| %>
			<p>
				<%= lol.tweet.text %><br />
				<small><img src="http://img.tweetimag.es/i/<%= lol.tweet.from_user %>_m" style="border:3px solid #fff;vertical-align:middle;" /> <%= link_to lol.tweet.from_user, user_path(lol.tweet.from_user) %></small>
			</p>
			<% end %>
		</td>
	</tr>
</table>